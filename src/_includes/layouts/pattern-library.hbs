---
layout: layouts/base
styles:
- /styles/eleventy-patterns/index
scripts:
- /scripts/eleventy-scripts/eleventy
---
<div class="EP_layout">
  <nav class="EP_nav">
    <div class="EP_nav__header">
      <h2>
        <a href="/" class="EP_nav__logo">
          Eleventy Patterns
        </a>
      </h2>
      <button class="EP_nav__menu-toggle EP_button" aria-expanded="false">Menu</button>

    </div>


    <ul class="EP_nav__menu">
      <li class="EP_nav__category">
        <a class="EP_nav__submenu-toggle" aria-expanded="false" role="button">
            Prototypes
          <svg xmlns="http://www.w3.org/2000/svg" width="20" height="10" viewBox="0 0 20 12.35" class="toggle-icon" aria-hidden="true" focusable="false">
            <path d="M17.65,0,10,7.63,2.35,0,0,2.35l10,10,10-10Z"/>
          </svg>
        </a>
        <ul class="EP_u_stagger-items EP_nav__submenu">
          <li>
            <a href="/prototypes" class="EP_nav__link">
              Prototypes Overview
            </a>
          </li>
          {{#each (sortCollection collections.prototypes)}}
            {{#unless data.hide}}
              <li>
                <a href="{{url url}}" class="EP_nav__link">
                  {{data.title}}
                </a>
              </li>
            {{/unless}}
          {{/each}}
        </ul>
      </li>
      <li class="EP_nav__category">
        <a class="EP_nav__submenu-toggle" aria-expanded="false" role="button">
          Patterns
          <svg xmlns="http://www.w3.org/2000/svg" width="20" height="10" viewBox="0 0 20 12.35" class="toggle-icon" aria-hidden="true" focusable="false">
            <path d="M17.65,0,10,7.63,2.35,0,0,2.35l10,10,10-10Z"/>
          </svg>
        </a>

        <ul class="EP_u_stagger-items EP_nav__submenu">
          <li>
            <a href="/patterns" class="EP_nav__link">
              Patterns Overview
            </a>
          </li>
          {{#each (sortCollection collections.patterns)}}
            {{#unless data.hide}}
              <li>
                <a href="{{url url}}" class="EP_nav__link">
                  {{data.title}}
                </a>
              </li>
            {{/unless}}
          {{/each}}
        </ul>
      </li>
    </ul>
    <ul class="EP_nav__menu-large">
      <li>
        <a href="/prototypes" class="EP_nav__link-primary">
          Prototypes
        </a>
      </li>
      <li>
        <a href="/patterns" class="EP_nav__link-primary">
          Patterns
        </a>
      </li>
    </ul>
  </nav>

  <main class="EP_layout__content">
    {{{ content }}}
  </main>
</div>
